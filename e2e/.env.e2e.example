# E2E test configuration
# Copy to .env.e2e and fill in your credentials

# Base URL of the running app
E2E_BASE_URL=http://localhost:5183/elephant

# Keycloak test user credentials
E2E_USERNAME=
E2E_PASSWORD=

E2E_TEST_PLANNING_ID=
E2E_TEST_ARTICLE_ID=
E2E_TEST_EVENT_ID=
E2E_TEST_PRINT_ARTICLE_ID=

# Version to restore the test article to after E2E runs (global teardown)
E2E_TEST_ARTICLE_RESTORE_VERSION=

# Second user for collaboration tests (optional)
# Falls back to first user in two contexts if not set
# E2E_USERNAME_2=
# E2E_PASSWORD_2=

# NixOS: uncomment and set path to system chromium
# PLAYWRIGHT_CHROMIUM_EXECUTABLE_PATH=/run/current-system/sw/bin/chromium
