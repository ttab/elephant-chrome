{
  "name": "elephant-chrome",
  "private": false,
  "license": "MIT",
  "version": "0.2.1",
  "type": "module",
  "scripts": {
    "dev": "concurrently npm:dev:vite npm:dev:client:css",
    "dev:vite": "tsx watch --ignore vite.config.ts.timestamp* --env-file=.env src-srv/index.ts",
    "dev:client": "concurrently npm:dev:client:*",
    "dev:client:web": "vite",
    "dev:client:css": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "build:server": "tsc --project ./src-srv/ && tsc-alias -p ./src-srv/tsconfig.json",
    "build:client": "tsc && vite build",
    "build:css": "tailwindcss -i ./src/input.css -o ./dist/output.css",
    "build": "NODE_ENV=production npm run build:css && npm run build:client && npm run build:server",
    "start": "NODE_ENV=production node dist/src-srv/index.js",
    "start:local": "NODE_ENV=production node --env-file .env dist/src-srv/index.js",
    "lint": "npm run tsc && eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "tsc": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "preview": "vite preview"
  },
  "dependencies": {
    "@auth/express": "^0.6.0",
    "@hocuspocus/extension-database": "^2.13.5",
    "@hocuspocus/extension-logger": "^2.13.5",
    "@hocuspocus/extension-redis": "^2.13.5",
    "@hocuspocus/provider": "^2.13.5",
    "@hocuspocus/server": "^2.13.2",
    "@microsoft/fetch-event-source": "^2.0.1",
    "@protobuf-ts/runtime-rpc": "^2.9.4",
    "@protobuf-ts/twirp-transport": "^2.9.4",
    "@slate-yjs/core": "^1.0.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tanstack/react-table": "^8.20.5",
    "@ttab/api-client": "^2.9.1",
    "@ttab/elephant-ui": "^0.3.0",
    "@ttab/textbit": "^0.14.6",
    "@ttab/textbit-plugins": "^0.3.1",
    "class-variance-authority": "^0.7.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-ws": "^5.0.2",
    "get-user-locale": "^2.3.2",
    "html-entities": "^2.5.2",
    "lodash-es": "^4.17.21",
    "next-auth": "^5.0.0-beta.20",
    "node-html-parser": "^6.1.13",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "redis": "^4.7.0",
    "slate": "^0.103.0",
    "slate-react": "^0.109.0",
    "swr": "^2.2.5",
    "vite-express": "^0.19.0",
    "yjs": "^13.6.18",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-serve-static-core": "^4.19.3",
    "@types/express-ws": "^3.0.5",
    "@types/jest": "^29.5.12",
    "@types/jsdom": "^21.1.7",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.14.8",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^2.0.5",
    "concurrently": "^9.0.1",
    "eslint": "^8.57.0",
    "eslint-config-love": "^47.0.0",
    "eslint-plugin-react": "^7.35.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.11",
    "fake-indexeddb": "^6.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^25.0.0",
    "tailwindcss": "^3.4.10",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.3",
    "vite-plugin-static-copy": "^1.0.6",
    "vitest": "^2.0.5",
    "ws": "^8.18.0"
  }
}
