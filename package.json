{
  "name": "elephant-chrome",
  "private": false,
  "license": "MIT",
  "version": "0.0.30",
  "type": "module",
  "scripts": {
    "dev": "concurrently npm:dev:server npm:dev:client",
    "dev:server": "tsx watch --env-file .env ./src-srv/index.ts",
    "dev:client": "concurrently npm:dev:client:*",
    "dev:client:web": "vite",
    "dev:client:css": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "build:server": "tsc --project ./src-srv/ && tsc-alias -p ./src-srv/tsconfig.json",
    "build:client": "tsc && vite build",
    "build:css": "tailwindcss -i ./src/input.css -o ./dist/output.css",
    "build": "npm run build:css && npm run build:client && npm run build:server",
    "start": "node dist/src-srv/index.js",
    "start:local": "node --env-file .env dist/src-srv/index.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "tsc": "tsc --noEmit",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "preview": "vite preview"
  },
  "dependencies": {
    "@hocuspocus/extension-database": "^2.12.2",
    "@hocuspocus/extension-logger": "^2.12.2",
    "@hocuspocus/extension-redis": "^2.12.2",
    "@hocuspocus/provider": "^2.12.2",
    "@hocuspocus/server": "^2.12.2",
    "@protobuf-ts/runtime-rpc": "^2.9.4",
    "@protobuf-ts/twirp-transport": "^2.9.4",
    "@slate-yjs/core": "^1.0.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tanstack/react-table": "^8.14.0",
    "@ttab/elephant-ui": "^0.2.14",
    "@ttab/textbit": "^0.13.0",
    "@ttab/textbit-plugins": "^0.2.0",
    "class-variance-authority": "^0.7.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-ws": "^5.0.2",
    "get-user-locale": "^2.3.2",
    "html-entities": "^2.5.2",
    "jose": "^5.3.0",
    "lodash-es": "^4.17.21",
    "node-html-parser": "^6.1.13",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "redis": "^4.6.13",
    "slate": "^0.102.0",
    "slate-react": "^0.102.0",
    "swr": "^2.2.5",
    "yjs": "^13.6.15",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.7",
    "@testing-library/user-event": "^14.5.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-ws": "^3.0.4",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-love": "^47.0.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "tailwindcss": "^3.4.3",
    "ts-jest": "^29.1.2",
    "ts-jest-mock-import-meta": "^1.2.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.7.3",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vite-plugin-static-copy": "^1.0.3"
  }
}
