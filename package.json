{
  "name": "elephant-chrome",
  "private": false,
  "license": "MIT",
  "version": "0.0.20",
  "type": "module",
  "scripts": {
    "dev": "concurrently npm:dev:server npm:dev:client",
    "dev:server": "tsx watch --env-file .env ./src-srv/index.ts",
    "dev:client": "concurrently npm:dev:client:*",
    "dev:client:web": "vite",
    "dev:client:css": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "build:server": "cd src-srv && tsc",
    "build:client": "tsc && vite build",
    "build:css": "tailwindcss -i ./src/input.css -o ./dist/output.css",
    "build": "npm run build:css && npm run build:client && npm run build:server",
    "start": "node dist/src-srv/index.js",
    "start:local": "node --env-file .env dist/src-srv/index.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "tsc": "tsc --noEmit",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "preview": "vite preview"
  },
  "dependencies": {
    "@hocuspocus/extension-database": "^2.11.1",
    "@hocuspocus/extension-logger": "^2.11.1",
    "@hocuspocus/extension-redis": "^2.11.1",
    "@hocuspocus/provider": "^2.11.1",
    "@hocuspocus/server": "^2.11.1",
    "@protobuf-ts/runtime-rpc": "^2.9.3",
    "@protobuf-ts/twirp-transport": "^2.9.3",
    "@tailwindcss/container-queries": "^0.1.1",
    "@ttab/elephant-ui": "^0.2.2",
    "@tanstack/react-table": "^8.12.0",
    "@ttab/textbit": "^0.6.6",
    "class-variance-authority": "^0.7.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-ws": "^5.0.2",
    "get-user-locale": "^2.3.1",
    "html-entities": "^2.4.0",
    "jose": "^5.2.2",
    "lodash-es": "^4.17.21",
    "node-html-parser": "^6.1.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "redis": "^4.6.13",
    "slate": "^0.102.0",
    "slate-react": "^0.101.6",
    "swr": "^2.2.4",
    "uuid": "^9.0.1",
    "yjs": "^13.6.11",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-ws": "^3.0.4",
    "@types/jest": "^29.5.12",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "pretty-format": "^29.7.0",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.2",
    "ts-jest-mock-import-meta": "^1.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-static-copy": "^1.0.1"
  }
}
