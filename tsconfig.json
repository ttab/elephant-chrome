{
  "compilerOptions": {
    "types": [
      "vite/client",
      "vitest/globals",
      "node"
    ],
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@/components/*": [
        "./src/components/*"
      ],
      "@/components": [
        "./src/components/index.tsx"
      ],
      "@/views/*": [
        "./src/views/*"
      ],
      "@/views": [
        "./src/views/index.tsx"
      ],
      "@/hooks/*": [
        "./src/hooks/*"
      ],
      "@/hooks": [
        "./src/hooks/index.tsx"
      ],
      "@/contexts/*": [
        "./src/contexts/*"
      ],
      "@/contexts": [
        "./src/contexts/index.tsx"
      ],
      "@/lib/*": [
        "./src/lib/*"
      ],
      "@/defaults/*": [
        "./src/defaults/*"
      ],
      "@/defaults": [
        "./src/defaults/index.tsx"
      ],
      "@/types/*": [
        "./src/types/*"
      ],
      "@/types": [
        "./src/types/index.ts"
      ],
      "@/navigation/*": [
        "./src/navigation/*"
      ],
      "@/navigation": [
        "./src/navigation/index.ts"
      ],
      "@/shared/*": [
        "./shared/*"
      ],
      "@/shared": [
        "./shared/index.ts"
      ],
      "@/modules/*": [
        "./src/modules/*"
      ]
    },
  },
  "include": [
    "src",
    "srv-src",
    "./shared/**/*",
    "vite.config.ts",
    "tailwind.config.ts",
    "./eslint.config.mjs",
    "postcss.config.js",
    "setupTests.ts",
    "jest.config.ts",
    "__mocks__/**/*",
    "__tests__/**/*",
    "__mocks__",
    "types/**/*",
    "src-srv/utils/transformations/groupedNewsDoc.ts"
  ]
}
